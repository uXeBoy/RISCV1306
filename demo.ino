  clearDisplay();

  for(int16_t i=0; i<HEIGHT/2; i+=2) {
    drawRect(i, i, WIDTH-2*i, HEIGHT-2*i, WHITE);
    display(); // Update screen with each newly-drawn rectangle
    delay(1);
